<div class="container">
    <h1 class="title">Burger Time!</h1>
    <img id="burgerpic" src="/assets/img/transparentburger.png" alt="tasty burger">
    <form action="/addburger" method="POST">
        <label for="namefield">What kind of burger do you want!</label><br>
        <input type="text" name="burgerName" id="namefield" placeholder="Burger Name">
        <input type="submit" value="Submit" id="submitBtn">
    </form>
    <div class="burgertainer container">
        <div class="listContainer">
            <h2 class="listTitle">Fresh Burgers</h2>
            <ul class="burgerlist">
                {{#each freshrows}}
                    <li><a href="/eat/{{id}}" class='burgerlink'>{{burger_name}}</a> <span class='subtext'>&#8592; click to eat!</span></li>
                {{/each}}
            </ul>
        </div>
        <div class="listContainer">
            <h2 class="listTitle">Eaten Burgers</h2>
            <ul class="burgerlist">
                {{#each devouredrows}}
                    <li class='eaten'>{{burger_name}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
